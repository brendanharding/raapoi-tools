#%Modules

module-whatis "UCAR/NCAR Weather Research and Forecasting (WRF) Model. \
                To run the model you will need to copy the following file to \
                your project folder: cp $WPS/namelist.wps namelist.wps"

module load gcc/8.2.0


conflict netcdf
conflict openmpi

set root /home/software/apps/WRF/4.2
setenv JASPERLIB $root/WRF/Build_WRF/LIBRARIES/grib2/lib
setenv JASPERINC $root/WRF/Build_WRF/LIBRARIES/grib2/include
setenv NETCDF $root/WRF/Build_WRF/LIBRARIES/netcdf
setenv WPS $root/WPS

prepend-path PATH $root/WRF/Build_WRF/LIBRARIES/mpich/bin
prepend-path PATH $root/WRF/Build_WRF/LIBRARIES/netcdf/bin
prepend-path PATH $root/WRF/main
prepend-path PATH $root/WPS
