qfile = open('/nfs/home/cad/log/scratch.log', 'r')
for line in qfile:
    if luser in line:
      user,used,quota = line.split()
      print('{0:>30}  {1:10.2f}  {2:10.2f} {3:10.2%}'.format('/nfs/scratch/' + user,float(used)/(1024**2), float(quota)/(1024**2),float(used)/float(quota)))
